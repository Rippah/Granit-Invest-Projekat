<UserControl
    x:Class="GranitInvest.CustomControls.BindablePasswordBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <PasswordBox
        x:Name="TxtPassword"
        Padding="30,0,0,0"
        VerticalContentAlignment="Center"
        BorderThickness="0,0,0,1"
        CaretBrush="#f8ca0a"
        FontFamily="Montserrat"
        FontSize="13"
        FontWeight="Medium"
        Foreground="#f8ca0a">
        <PasswordBox.Background>
            <ImageBrush
                AlignmentX="Left"
                ImageSource="/GranitInvest;component/Resources/Images/key.png"
                Stretch="None" />
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
